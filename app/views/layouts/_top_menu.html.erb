<header class="main-header">
  <!-- Logo -->
  <a href="/" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini">C<b>G</b></span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg">Control de <b>Gestión</b></span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="javascript:;" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag 'user.png', class: 'user-image' %>
            <span class="hidden-xs"><%= current_user.first_name %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <%= image_tag 'user.png', class: 'img-circle' %>
              <p>
                <%= current_user.first_name %> <%= current_user.last_name %>
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <div class="col-xs-12 text-center">
                <div>
                  <%= link_to 'Cambiar contraseña', change_password_path %>
                </div>
              </div>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to 'Perfil', edit_profile_path, class: 'btn btn-default btn-flat' %>
              </div>
              <div class="pull-right">
                <%= link_to 'Cerrar sesión', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat' %>
              </div>
            </li>
          </ul>
        </li>
        <!--
        <li>
          <a href="javascript:;" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
        </li>
        Control Sidebar Toggle Button -->
      </ul>
    </div>
  </nav>
</header>
