<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Ciudad</h3>
    <div class="box-tools">
    </div>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for(city, html: {class: 'form-horizontal'}, validate: true) do |f| %>
      <div class="box-body">
        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :state_id, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.collection_select(:state_id, State.all, :id, :name, {prompt: t('helpers.select.prompt')},
                                  {class: 'form-control col-md-12'}) %>
          </div>
        </div>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <div class="col-sm-offset-2">
          <%= f.button 'Crear', class: 'btn btn-flat btn-success' %>
          <%= link_to 'Cancelar', cities_path, class: 'btn btn-flat btn-danger' %>
        </div>
      </div>
  <% end %>
</div>
