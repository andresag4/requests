<div class="nested-fields">
  <div class="group-form row">
    <div class="col-md-7">
      <%= f.text_field :name, class: 'form-control phone-mask', placeholder: t('.language') %>
    </div>
    <div class="col-md-5">
      <div class="input-icon right">
        <%= f.text_field :percentage, class: 'form-control extension-mask', placeholder: t('.percentage') %>
        <%= link_to_remove_association '<i class="fa fa-times"></i>'.html_safe, f, class: 'remove-require',
                                       title: t('.destroy') %>
      </div>
    </div>
  </div>
  <br/>
</div>
