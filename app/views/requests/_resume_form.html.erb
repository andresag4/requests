<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t('.title') %></h3>
    <div class="box-tools">
    </div>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <div class="box-body">
    <div class="form-group">
      <%= f.label :category_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.collection_select(:category_id, Category.resume, :id, :name, {prompt: t('helpers.select.prompt')},
                              {class: 'form-control col-md-12'}) %>
      </div>
    </div>

    <div class="form-group no-margin-bottom">
      <label class="col-md-2 control-label"><%= t '.abilities' %></label>

      <div class="col-md-10">
        <div>
          <%= f.fields_for :abilities do |ability| %>
              <%= render 'ability_fields', f: ability %>
          <% end %>
        </div>

        <div class="form-group">
          <div id="add-phone" class="links col-md-12">
            <%= link_to_add_association "<i class='fa fa-plus'></i> #{t '.add_abilities'}".html_safe, f, :abilities,
                                        class: 'form-control', partial: 'ability_fields' %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group no-margin-bottom">
      <label class="col-md-2 control-label"><%= t '.languages' %></label>

      <div class="col-md-10">
        <div>
          <%= f.fields_for :languages do |language| %>
              <%= render 'language_fields', f: language %>
          <% end %>
        </div>

        <div class="form-group">
          <div id="add-phone" class="links col-md-12">
            <%= link_to_add_association "<i class='fa fa-plus'></i> #{t '.add_languages'}".html_safe, f, :languages,
                                        class: 'form-control', partial: 'language_fields' %>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group no-margin-bottom">
      <label class="col-md-2 control-label"><%= t '.studies' %></label>

      <div class="col-md-10">
        <div>
          <%= f.fields_for :studies do |study| %>
              <%= render 'study_fields', f: study %>
          <% end %>
        </div>

        <div class="form-group">
          <div id="add-phone" class="links col-md-12">
            <%= link_to_add_association "<i class='fa fa-plus'></i> #{t '.add_studies'}".html_safe, f, :studies,
                                        class: 'form-control', partial: 'study_fields' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
