<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t('requests.file_form.title') %></h3>
    <div class="box-tools">
    </div>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <div class="box-body">
    <div class="form-group no-margin-bottom">
      <label class="col-md-2 control-label"><%= t 'requests.file_form.name' %></label>

      <div class="col-md-10">
        <div>
          <%= f.fields_for :request_files, request.request_files do |file| %>
              <%= render 'file_form', f: file %>
          <% end %>
        </div>

        <div class="form-group">
          <div id="add-phone" class="links col-md-12">
            <%= link_to_add_association "<i class='fa fa-plus'></i> #{t '.add'}".html_safe, f, :request_files,
                                        class: 'form-control', partial: 'file_form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
