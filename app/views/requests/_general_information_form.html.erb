<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t('.title') %></h3>
    <div class="box-tools">
    </div>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <div class="box-body">
    <div class="form-group">
      <%= f.label :title_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.collection_select(:title_id, Title.all, :id, :name, {prompt: t('helpers.select.prompt')},
                              {class: 'form-control col-md-12'}) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :father_last_name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :father_last_name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :mother_last_name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :mother_last_name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :birthdate, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :birthdate, class: 'form-control date-picker-form', validate: false %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :gender_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.collection_select(:gender_id, Gender.all, :id, :name, {prompt: t('helpers.select.prompt')},
                              {class: 'form-control col-md-12'}) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :position, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :position, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :organization, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :organization, class: 'form-control' %>
      </div>
    </div>

    <div style="display:none;">
      <%= f.check_box :anonymous, id: 'anonymous-check' %>
    </div>

    <div id="phone-field">
      <%= f.fields_for :contact_phones do |phone| %>
          <%= render '/shared/phone_fields', f: phone %>
      <% end %>
    </div>

    <div class="form-group">
      <div id="add-phone" class="links col-md-10 col-md-offset-2">
        <%= link_to_add_association "<i class='fa fa-plus'></i> Agregar TelÃ©fono".html_safe, f,
                                    :contact_phones, class: 'form-control',
                                    partial: '/shared/phone_fields' %>
      </div>
    </div>

  </div>
</div>
