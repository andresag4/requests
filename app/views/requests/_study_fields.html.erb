<div class="nested-fields col-md-12">
  <div class="group-form row">
    <div class="col-md-7 no-padding-right">
      <%= f.text_field :degree, class: 'form-control phone-mask', placeholder: t('.degree') %>
    </div>
    <div class="col-md-5">
      <div class="inline-flex">
        <%= f.text_field :end_study, class: 'form-control extension-mask', placeholder: t('.end_study') %>
        <%= link_to_remove_association '<i class="fa fa-times"></i>'.html_safe, f, class: 'btn btn-flat btn-default',
                                       title: t('.destroy') %>
      </div>
    </div>
    <div class="col-md-12 padding-top">
      <%= f.text_field :institution, class: 'form-control phone-mask', placeholder: t('.institution') %>
    </div>
  </div>
  <br/>
</div>
