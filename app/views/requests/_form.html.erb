<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Solicitud</h3>
    <div class="box-tools">
    </div>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for(request, html: {class: 'form-horizontal'}, validate: true) do |f| %>
      <div class="box-body">
        <div class="form-group">
          <%= f.label :folio, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :folio, class: 'form-control', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :reception_date, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :reception_date, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :data_type, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.select :data_type, Request.i18n_data_type, {}, {class: 'form-control'} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :entry_id, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= collection_select(:entry_id, :id, Entry.all, :id, :name, {prompt: t('helpers.select.prompt')},
                                  {class: 'form-control col-md-12'}) %>
          </div>
        </div>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <div class="col-sm-offset-2">
          <%= f.button 'Crear', class: 'btn btn-primary' %>
          <%= link_to 'Cancelar', requests_path, class: 'btn btn-danger' %>
        </div>
      </div>
  <% end %>
</div>
