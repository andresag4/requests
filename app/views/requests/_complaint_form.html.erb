<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Queja o Denuncia</h3>
    <div class="box-tools">
    </div>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <div class="box-body">
    <div class="form-group">
      <%= f.label :category_id, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= collection_select(:category_id, :id, Category.complaint, :id, :name, {prompt: t('helpers.select.prompt')},
                              {class: 'form-control col-md-12'}) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :subject, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :subject, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :notes, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :notes, class: 'form-control' %>
      </div>
    </div>
  </div>
</div>
