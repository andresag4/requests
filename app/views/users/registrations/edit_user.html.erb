<div class="col-md-8 col-md-offset-2">
  <section class="content-header">
    <h1>Editar Usuario</h1>
  </section>
  <section class="content">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Usuario</h3>
        <div class="box-tools">
        </div>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@user, url: update_user_registration_path(@user), role: 'form', html: {class: 'form-horizontal'}, validate: true) do |f| %>
          <div class="box-body">
            <div class="form-group">
              <%= f.label :email, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.email_field :email, class: 'form-control', autofocus: true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :first_name, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :first_name, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :last_name, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :mother_last_name, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :mother_last_name, class: 'form-control' %>
              </div>
            </div>
          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <div class="col-sm-offset-2">
              <%= f.button 'Actualizar', class: 'btn btn-primary' %>
              <%= link_to 'Cancelar', user_registrations_path, class: 'btn btn-danger' %>
            </div>
          </div>
      <% end %>
    </div>
  </section>
</div>
