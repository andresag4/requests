<div class="col-md-8 col-md-offset-2">
  <section class="content-header">
    <h1>Editar Perfil</h1>
  </section>
  <section class="content">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Perfil</h3>
        <div class="box-tools">
        </div>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@user, url: update_profile_path, validate: true, role: 'form', html: {method: :put, class: 'form-horizontal'}) do |f| %>
          <div class="box-body">
            <div class="form-group">
              <%= f.label :email, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.email_field :email, class: 'form-control', autofocus: true %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :first_name, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :first_name, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :last_name, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
            </div>
            <div class="form-group no-margin-bottom">
              <%= f.label :mother_last_name, class: 'col-sm-2 control-label' %>
              <div class="col-sm-10">
                <%= f.text_field :mother_last_name, class: 'form-control' %>
              </div>
            </div>

            <div id="phone-field" class="row">
              <%= f.fields_for :phones do |phone| %>
                  <%= render '/shared/phone_fields', f: phone %>
              <% end %>
            </div>

            <div class="form-group">
              <div id="add-phone" class="links col-md-10 col-md-offset-2">
                <%= link_to_add_association "<i class='fa fa-plus'></i> Agregar TelÃ©fono".html_safe, f,
                                            :phones, class: 'form-control',
                                            partial: '/shared/phone_fields' %>
              </div>
            </div>

          </div>
          <!-- /.box-body -->
          <div class="box-footer">
            <div class="col-sm-offset-2">
              <%= f.button 'Actualizar', class: 'btn btn-flat btn-success' %>
              <%= link_to 'Cancelar', user_registrations_path, class: 'btn btn-flat btn-danger' %>
            </div>
          </div>
      <% end %>
    </div>
  </section>
</div>
